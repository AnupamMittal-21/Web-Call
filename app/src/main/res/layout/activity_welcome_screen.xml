<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeScreen">


    <ImageView
        android:id="@+id/Background_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back_6" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Background_Image"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/Background_Image"
        app:layout_constraintTop_toTopOf="@+id/Background_Image"
        app:layout_constraintVertical_bias="0.177"
        app:srcCompat="@drawable/cooltext401196626205984" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the code \n or \n link to join the meeting"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Background_Image"
        app:layout_constraintStart_toStartOf="@+id/Background_Image"
        app:layout_constraintTop_toTopOf="@+id/Background_Image"
        app:layout_constraintVertical_bias="0.407" />

    <EditText
        android:id="@+id/edt_link"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/edt_background"
        android:hint="Enter link"
        android:paddingLeft="30dp"
        android:paddingBottom="0dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Background_Image"
        app:layout_constraintEnd_toEndOf="@+id/Background_Image"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/Background_Image"
        app:layout_constraintTop_toTopOf="@+id/Background_Image"
        app:layout_constraintVertical_bias="0.546" />

    <EditText
        android:id="@+id/edt_code"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/edt_background"
        android:hint="Enter Code"
        android:paddingLeft="30dp"
        android:paddingBottom="0dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Background_Image"
        app:layout_constraintEnd_toEndOf="@+id/Background_Image"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/Background_Image"
        app:layout_constraintTop_toTopOf="@+id/Background_Image"
        app:layout_constraintVertical_bias="0.649" />


    <Button
        android:id="@+id/btnJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:background="@drawable/btn_background"
        android:text="Join"
        android:textAllCaps="false"
        android:textColor="@color/blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/Background_Image"
        app:layout_constraintEnd_toEndOf="@+id/edt_code"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/edt_code"
        app:layout_constraintTop_toBottomOf="@+id/edt_code" />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background_2"
        android:text="chat"
        android:textColor="@color/blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnJoin"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/Background_Image"
        app:layout_constraintTop_toTopOf="@+id/btnJoin"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/btnFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background_2"
        android:text="files"
        android:textColor="@color/blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/Background_Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnJoin"
        app:layout_constraintTop_toTopOf="@+id/btnJoin"
        app:layout_constraintVertical_bias="0.765" />


</androidx.constraintlayout.widget.ConstraintLayout>